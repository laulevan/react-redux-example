{
  "name": "react-redux-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.16.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "history": "^4.7.2",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.7",
    "node-sass-chokidar": "0.0.3",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.10",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "redux-persist": "^4.9.1",
    "redux-thunk": "^2.2.0",
    "validator": "^8.1.0"
  },
  "scripts": {
    "symlinkdev": "cd node_modules && ln -nsf ../src/app ",
    "cleansymlink": "cd node_modules && rm app || true",
    "prestart": "npm run cleansymlink && npm run symlinkdev",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": " react-scripts start",
    "start": " npm-run-all -p watch-css start-js",
    "prebuild": "npm run cleansymlink && npm run symlinkdev && npm run build-css",
    "build": "  react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.1.0",
    "prettier": "^1.6.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write --trailing-comma all",
      "eslint --fix",
      "git add"
    ]
  }
}
